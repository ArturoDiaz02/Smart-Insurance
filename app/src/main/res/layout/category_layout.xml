<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardViewCategory="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCategory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="17dp"
    android:forceDarkAllowed="false"
    cardViewCategory:cardCornerRadius="15dp"
    cardViewCategory:cardElevation="10dp"
    tools:targetApi="q">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutCategory"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:forceDarkAllowed="false"
        android:background="@drawable/shape"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_category"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/category_image"
            cardViewCategory:layout_constraintEnd_toEndOf="parent"
            cardViewCategory:layout_constraintHorizontal_bias="0.48"
            cardViewCategory:layout_constraintStart_toStartOf="parent"
            cardViewCategory:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="#313131"
            android:forceDarkAllowed="false"
            android:textSize="12sp"
            android:textStyle="bold"
            cardViewCategory:layout_constraintEnd_toEndOf="parent"
            cardViewCategory:layout_constraintStart_toStartOf="parent"
            cardViewCategory:layout_constraintTop_toBottomOf="@+id/image_category" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>